    </font>

    <font name="infofont" face="Arial">
        <color>#ffffff</color>
        <size>20</size>
        <bold>yes</bold>
    </font>
    
    <buttontree name="gametreelist">
        <area>0,10,800,310</area>
        <numlists>2</numlists>
        <spacing>10</spacing>
        <buttonlist name="listtemplate" from="basebuttonlist" />
