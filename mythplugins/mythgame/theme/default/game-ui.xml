<mythuitheme>

  <window name="gameui">

    <imagetype name="fanart">
        <area>0,0,800,600</area>
    </imagetype>

    <font name="largetitle" face="Arial">
        <color>#ffffff</color>
        <dropcolor>#000000</dropcolor>
        <size>32</size>
        <shadow>3,3</shadow>
