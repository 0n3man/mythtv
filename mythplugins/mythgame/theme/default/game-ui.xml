    <textarea name="gametitle">
        <area>38,360,500,50</area>
        <font>largetitle</font>
    </textarea>

    <textarea name="system">
        <area>38,430,150,35</area>
        <font>infofont</font>
        <value>System:</value>
    </textarea>

    <textarea name="systemname">
        <area>178,430,500,35</area>
        <font>infofont</font>
    </textarea>

    <textarea name="year">
        <area>38,465,150,35</area>
