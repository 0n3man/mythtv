        <value>Year:</value>
    </textarea>

    <textarea name="yearname">
        <area>178,465,500,35</area>
        <font>infofont</font>
    </textarea>

    <textarea name="genre">
        <area>38,495,150,35</area>
        <font>infofont</font>
        <value>Genre:</value>
    </textarea>

    <textarea name="genrename">
        <area>178,495,500,35</area>
        <font>infofont</font>
    </textarea>

    <textarea name="favorite">
        <area>38,525,150,35</area>
