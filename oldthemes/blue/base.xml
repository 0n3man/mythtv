<mythuitheme>

    <window name="backgroundwindow">
        <imagetype name="backimg">
            <filename>background.png</filename>
        </imagetype>

        <font name="small" face="Arial">
            <color>#FFFFFF</color>
            <size>14</size>
            <bold>yes</bold>
        </font>

        <font name="medium" from="small">
            <size>16</size>
        </font>

        <font name="large" from="small">
            <size>20</size>
        </font>

        <font name="basefont"  face="Trebuchet Ms">
            <color>#ffffff</color>
            <dropcolor>#000000</dropcolor>
            <size>16</size>
            <shadow>2,2</shadow>
            <bold>yes</bold>
        </font>

        <font name="title" from="basefont" face="Arial Black">
            <color>#ffffdd</color>
            <size>22</size>
            <bold>no</bold>
        </font>

        <font name="subtitle" from="basefont">
            <color>#ffffdd</color>
            <size>18</size>
        </font>

        <font name="info" from="basefont">
            <shadow>1,1</shadow>
        </font>

        <font name="metadata" from="info">
            <color>#ffffdd</color>
        </font>

        <font name="help" from="info">
            <shadow>2,2</shadow>
            <color>#aaaaee</color>
        </font>

        <font name="description" from="info">
            <shadow>1,1</shadow>
        </font>

        <font name="small-info" from="info">
            <size>14</size>
        </font>

        <font name="list-active" from="basefont" face="Freesans">
            <size>15</size>
            <shadow>1,1</shadow>
            <color>#ddddff</color>
        </font>

        <font name="list-inactive" from="list-active">
            <color>#aaaaee</color>
        </font>

        <font name="list-record" from="list-active">
            <color>#33ff33</color>
        </font>

        <font name="list-recording" from="list-active">
            <color>#ff5544</color>
        </font>

        <font name="list-norecord" from="list-active">
            <color>#999999</color>
        </font>

        <font name="list-conflict"  from="list-active">
            <color>#dddd33</color>
        </font>

        <font name="list-tagged"  from="list-active">
            <color>#dddd33</color>
        </font>

        <font name="list-selected"  from="list-active">
            <color>#ffffff</color>
        </font>

        <font name="list-selectable" from="list-active">
            <color>#ddddff</color>
        </font>

        <font name="recstatus" from="info">
            <color>#ffff33</color>
            <shadow>2,2</shadow>
        </font>

    </window>

</mythuitheme>

